<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script type="module" src="/javascripts/APIHandler.js"></script>
    {{!-- <script type="module" src="/javascripts/commands"></script> --}}
    {{#if css}}
    <link rel='stylesheet' href='/stylesheets/{{css}}.css' />
    {{/if}}
    {{#if js}}
    <script type="module" src="/javascript/{{js}}.js"></script>
    {{/if}}
  </head>
 <body>
    <div class="content">
    <header id="nav-bar" class="check">
      <a href="/"><h2 id="logo">Recipe Hunter</h2></a>
        
        <input id="search_input" type="text" class="input">
        <nav id="page-links">
            <a href="/">Home</a>
            <a href="/recipes">Recipes</a>
            <a href="/about">About</a>
            {{#unless isLoggedIn}}
            <a  href="/auth/signin" id="nav_login" class="button-ternary flexed-item nav-end-item">
            <span class="btn-text">Sign in</span>
            </a>
            {{/unless}}
            {{#if isLoggedIn}}
            <a  href="/auth/signout" id="nav_logout" class="button-ternary flexed-item nav-end-item">
              <span class="btn-text">Log out</span>
            </a>
            <a  href="/users" id="nav_users" class="button-ternary flexed-item nav-end-item">
              <span class="btn-text">Profile</span>
            </a>
            {{/if}}
        </nav>
        
    </header>
  
    {{{body}}}
    
    </div>
